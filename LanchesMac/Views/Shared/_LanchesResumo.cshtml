@model LanchesMac.Models.Lanche

<div class="card mb-3 h-100 custom-card" style="max-width: 18rem;">
    <img src="@Model.ImagemUrl" class="card-img-top img-fluid w-100" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Nome</h5>
        <p class="card-text">@Model.DescricaoCurta</p>
        <h6 class="card-subtitle mb-2 text-muted text-center">Preço: @Model.Preco.ToString("c")</h6>
    </div>
    <div class="card-footer text-center d-flex justify-content-center">
        <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
           asp-action="AdicionarItemNoCarrinhoCompra" asp-route-LancheId="@Model.LancheId">
            Incluir no Carrinho
        </a>
    </div>
</div>
